<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.finedev.AplikasiInformasiPendakianGunung.Login.LoginActivity"
    >

    <ImageView
        android:id="@+id/image_view_icon_firebase_activity_main"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_below="@+id/relative_layout_progress_activity_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:src="@drawable/mountain" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Informasi Pendakian Gunung Menggunakan Firebase"
        android:paddingTop="250dp"
        android:textSize="15sp"
        android:textStyle="bold"/>

<!--
    <EditText
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_nama_activity_main"
        android:hint="username"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/image_view_icon_firebase_activity_main"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />
-->


    <EditText
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_email_activity_main"
        android:hint="email"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_centerInParent="true"

        android:layout_height="wrap_content"
        android:id="@+id/edit_text_password_activity_main"
        android:hint="password"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/edit_text_email_activity_main"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/button_login_activity_main"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_password_activity_main"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/relative_layout_progress_activity_main"
        android:layout_toRightOf="@+id/relative_layout_progress_activity_main"
        android:background="@drawable/background_button_orange"
        android:text="Login"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_sign_up_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/button_lupa_password"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_text_view_create_account"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp"
        android:text="Daftar Akun Baru"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button_lupa_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_text_view_create_account"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp"
        android:text="Develop by Dedy Rizaldi"
        android:layout_centerInParent="true"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_view_not_registered_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/button_sign_up_activity_main"
        android:layout_alignLeft="@+id/button_sign_up_activity_main"
        android:layout_alignStart="@+id/button_sign_up_activity_main"
        android:gravity="center"
        android:text="Belum Terdaftar?" />

    <!-- for progress loading -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_layout_progress_activity_main"
        android:background="@android:color/black"
        android:alpha="0.7"
        android:clickable="true"
        android:visibility="gone"
        >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</RelativeLayout>