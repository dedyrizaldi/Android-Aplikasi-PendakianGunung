<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.finedev.AplikasiInformasiPendakianGunung.Persiapan.Persiapan">
    <include
        android:id="@+id/test"
        layout="@layout/toolbar_perlengkapan">
    </include>
            <EditText
                android:id="@+id/edit1"
                android:layout_below="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jumlah Pendaki"
                android:inputType="number"/>

            <EditText
                android:id="@+id/edit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lama Menginap"
                android:inputType="number"
                android:layout_below="@id/edit1"
                />

            <Button
                android:id="@+id/buttonTambah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit2"
                android:text="hitung"
                android:visibility="visible" />


           <WebView
               android:id="@+id/webViewperlengkapan"
               android:layout_below="@+id/buttonTambah"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

           </WebView>






</RelativeLayout>

