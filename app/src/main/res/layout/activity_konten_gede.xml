<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.finedev.AplikasiInformasiPendakianGunung.KontenGunung">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="125dp"
                android:layout_height="176dp"
                android:background="#2d2d2d"
                android:id="@+id/ktnGnThumbnail_id_gede"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/namaGn_id_gede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Gunung"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ketinggianGn_id_gede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ketinggian Gunung"
                android:background="#edecec"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/gn_gede_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:layout_marginTop="10dp"
                android:textSize="18sp"/>

        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
